<div id="settings-edit">
  <div class="col-xs-6 settings-content">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
    
    <h2 class="setting-name">設定</h2>

    <div class="form-body">
      <div class="form-group">  
        <%= f.label :username ,"表示名", class: "control-label" %>
        <%= f.text_field :username, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">  
        <%= f.label :email ,"メールアドレス変更", class: "control-label"%>
        <%= f.email_field :email, autofocus: true , class: "form-control"%>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">  
        <%= f.label :password,"新しいパスワード",class: "control-label" %> <i>(パスワードを変更したい場合のみ)</i>
        <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation,"新しいパスワード",class: "control-label" %><i>(確認用)</i><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password,"現在のパスワード",class: "control-label" %><br />
        <%= f.password_field :current_password, autocomplete: "off" , class: "form-control"%>
      </div>
      
      <%=f.submit "送信する", class: "btn btn-primary"%>

    </div>

  <% end %>
  </div>
</div>


