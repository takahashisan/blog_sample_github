<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body</th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if post.image? %>
    　<td><%=  image_tag post.image.url%></td>
    　<% else %>
    　<td><%= image_tag 'noimage.gif' %></td>
    　<% end %>

        <td><%= link_to post.title, post_path(post)%></td>
        <td><%= post.body %></td>

        <td><%= render 'posts/tag_list', tag_list: post.interest_list %></td>


        <% if post.favorited_by? current_user %>
          <%= link_to "いいね解除", post_favorites_path(post), method: :delete %>
          <% else %>
          <td><%= link_to "いいね!!!!!!", post_favorites_path(post), method: :post %></td>
          <% end %>

        <td>
          <% if post.user.followed_by? current_user %>
            <%= link_to "フォロー解除", user_relationships_path(post.user), method: :delete %>
          <% else %>
            <%= link_to "フォロー", user_relationships_path(post.user), method: :post %>
          <% end %>
        </td>


        <!-- <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
  <br>
</table>

<%= paginate @posts %>
<br>
<%= link_to 'New Post', new_post_path %>
