<!DOCTYPE html>
<html>
<head>
  <title>BlogSample</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id = "application">
	<header>

    <div class = "navbar navbar-default">
      <div class = "container">
        
        <div class= "navbar-header" >
         <p><%= link_to 'Listing Posts', root_path %></p>
        </div>

        <% if user_signed_in? %> 

        <ul class="nav navbar-nav">

          <li><%= link_to "全ツイート一覧", posts_path %></li>
          <li><%= link_to 'ユーザー一覧', users_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "マイページ(#{current_user.name})" , user_path(current_user) %></li>
          <li><%= link_to '設定', edit_user_registration_path %> </li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        
          
        <% else %>
          <li><%= link_to "サインイン", new_user_registration_path %> |</li>
          <li><%= link_to "ログイン", new_user_session_path %></ul>
        <% end %>
        </ul>

        </div>
    </div>
</header>

	<%= yield %>

</body>
</html>
